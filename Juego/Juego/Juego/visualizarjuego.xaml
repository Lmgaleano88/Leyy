<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Juego.visualizarjuego">
   
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Juegos registrados" HorizontalOptions="Center" TextColor="Red"/>
            <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lbnombre"></Label>
                            <Label x:Name="lbcategoria"></Label>
                            <Label x:Name="lbtamano"></Label>
                            <Label x:Name="lbprecio"></Label>
                            <Label x:Name="lbcantidad"></Label>


                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>